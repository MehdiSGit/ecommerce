{% extends "base.html.twig" %}

{% block title %}
    Mes commandes
{% endblock %}

{% block body %}
    <h1>Mes commandes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Adresse</th>
                <th>Date de commande</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% for p in purchases %}
                <tr>
                    <td>{{ p.id }}</td>
                    <td>{{ p.address }}<br>{{ p.postaleCode }}, {{ p.city }}</td>
                    <td>{{ p.purchasedAt | date('d/m/y H:i') }}</td>
                    <td>{{ p.total / 100 }} €<td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}