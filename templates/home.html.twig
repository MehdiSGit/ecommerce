{% extends "base.html.twig" %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}

	<h1>Nos produits phares</h1>

	<div class="row">
		{% for product in products %}
			<div class="col">
				{% include "product/_product_card.html.twig" with {'p': product} %}
			</div>
		{% endfor %}
	</div>

	<hr>
	<h2>Un service irréprochable</h2>
	<p>Lorem ipsum dolor sit am</p>
	<div class="row">
		{% include "shared/_assurance.html.twig" with {
            'color': 'primary',
            'icone': 'fas fa-truck',
            'text': 'Lorem ipsum dolor sit, amet consectetur adipisicing elit. Repudiandae sunt ad, suscipit dignissimos autem ab?'
        } %}

		{% include "shared/_assurance.html.twig" with {
            'color': 'success',
            'icone': 'fas fa-check',
            'text': 'Lorem ipsum dolor sit, amet consectetur adipisicing elit. Repudiandae sunt ad, suscipit dignissimos autem ab?'
        } %}

		{% include "shared/_assurance.html.twig" with {
            'color': 'warning',
            'icone': 'fas fa-lock',
            'text': 'Lorem ipsum dolor sit, amet consectetur adipisicing elit. Repudiandae sunt ad, suscipit dignissimos autem ab?'
        } %}
	</div>
	
	<div id="contactForm" class="mt-4">
		{{ form_start(form) }}
		<div class="row">
			<div class="col">{{ form_row(form.firstname, {'label': 'Prénom'}) }}</div>
			<div class="col">{{ form_row(form.lastname, {'label': 'Nom'} )}}</div>
		</div>
		<div class="row">
			<div class="col">{{ form_row(form.phone, {'label': 'Numéro de téléphone'}) }}</div>
			<div class="col">{{ form_row(form.email, {'label': 'Adresse email'}) }}</div>
		</div>
		{{ form_rest(form) }}
		<div class="form-group">
			<button type="submit" class="btn btn-success">Contactez moi </button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}

