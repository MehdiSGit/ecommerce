{% extends "base.html.twig" %}

{% block title %}
    Catégorie : {{ slug }}
{% endblock %}

{% block body %}
    <h1>Catégorie : {{ category.name }}</h1>
    <div class="row">
        {% for p in category.products %}
            <div class="col-3">
				<div class="card p-3">
					<img src="{{ p.mainPicture }}" class="img-fluid" alt="Image produit">
					<div class="card_body">
						<h4 class="card-title">{{ p.name }} ({{ p.price / 100 }} &euro;)</h4>
						<span class="badge bg-danger">
							{{ p.category.name }}
						</span>
						<p class="card-text">{{ p.shortDescription}}</p>
						<a href="#" class="btn btn-primary btn-sm">Détail produit</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter</a>
					</div>
				</div>
			</div>
        {% endfor %}
    </div>

{% endblock %}